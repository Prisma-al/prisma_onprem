<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-name="profisc.ReceiptHeader" t-inherit="point_of_sale.ReceiptHeader" t-inherit-mode="extension">
		<xpath expr="//div[hasclass('pos-receipt-contact')]" position="after">
			<t t-if="props.data.partner">
				<div>--------------------------------</div>
                <t t-if="props.data.partner.name">
                        <div>Klienti:
                            <t t-esc="props.data.partner.name"/>
                        </div>
				</t>
                <t t-if="props.data.partner.vat">
                        <div>NUIS:
                            <t t-esc="props.data.partner.vat"/>
                        </div>
				</t>
                <t t-if="props.data.partner.address">
                        <div>Adresa:
                            <t t-esc="props.data.partner.address"/>
                        </div>
				</t>
			</t>
		</xpath>
	</t>
    <t t-name="profisc.OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('after-footer')]" position="inside">
            <t t-if="props.data.profisc_iic">
				<div class="profisc_fields">
					<div>------------------------</div>
                    <t t-if="props.data.profisc_ubl_id">
						<div>nr:<t t-esc="props.data.profisc_ubl_id"/>
						</div>
					</t>
                    <div>iic:<t t-esc="props.data.profisc_iic"/>
					</div>
                    <t t-if="props.data.profisc_fic">
						<div>fic:<t t-esc="props.data.profisc_fic"/>
						</div>
					</t>
                    <t t-if="props.data.profisc_eic">
						<div>eic:<t t-esc="props.data.profisc_eic"/>
						</div>
					</t>
					<div>------------------------</div>
					<div t-if="props.data.profisc_bkt_status">
								<strong>BKT Status:</strong>
						<t t-esc="props.data.profisc_bkt_status"/>
               				 </div>
					<div t-if="props.data.profisc_bkt_paymentType">
								<strong>Payment Type:</strong>
						<t t-esc="props.data.profisc_bkt_paymentType"/>
							</div>
					<div t-if="props.data.profisc_bkt_amount">
								<strong>Paid Amount:</strong>
						<t t-esc="props.data.profisc_bkt_amount"/>
							</div>
					<div t-if="props.data.profisc_bkt_source">
								<strong>Source:</strong>
						<t t-esc="props.data.profisc_bkt_source"/>
							</div>
					<div t-if="props.data.profisc_bkt_paymentMethod">
								<strong>Payment Method:</strong>
						<t t-esc="props.data.profisc_bkt_paymentMethod"/>
							</div>
					<div id="qrcode">
						<img style="width:200px;height:200px" class="profisc_qr_code" t-att-src="props.data.qrCode"
							 alt="qr_code"/>
					</div>
				</div>
			</t>
		</xpath>
	</t>
</templates>